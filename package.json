{
  "name": "basik",
  "version": "1.0.0",
  "description": "A simple blog that stores articles on git",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node-dev --watch ./**/*.html --poll src/server.ts",
    "watch:css": "tailwindcss --load-path=node_modules -i src/styles/styles.scss -o src/public/css/styles.css --watch",
    "dev": "concurrently \"npm run start\" \"npm run watch:css\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ButterflyCodeEffect/Basik.git"
  },
  "author": "Cosmin Seviciu, Corneliu Pantea",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ButterflyCodeEffect/Basik/issues"
  },
  "homepage": "https://github.com/ButterflyCodeEffect/Basik#readme",
  "dependencies": {
    "bootstrap": "^5.0.2",
    "express": "5.0.0",
    "globals": "^15.11.0",
    "showdown": "^1.9.1",
    "simple-git": "3.16.0",
    "twing": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/express": "^4.17.13",
    "@types/node": "^16.4.0",
    "@types/showdown": "^1.9.4",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "eslint": "^9.12.0",
    "postcss": "^8.4.47",
    "postcss-import": "^16.1.0",
    "prettier": "^2.3.2",
    "sass": "^1.79.5",
    "tailwindcss": "^3.4.13",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "type": "module"
}
